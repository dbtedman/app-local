#
# Environment configuration for use with Oracle tools.
#

<% if defined?(@java_version) %>
export JAVA_HOME=/usr/lib/jvm/jre-<%= @java_version %>-openjdk;
<% end %>

<% if defined?(@instant_client_version) %>
export LD_LIBRARY_PATH=/usr/lib/oracle/<%= @instant_client_version %>/client64/lib/;
export PATH=/usr/lib/oracle/<%= @instant_client_version %>/client64/bin/:$PATH;
<% end %>
